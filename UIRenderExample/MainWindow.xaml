<Window x:Class="UIRenderExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIRenderExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid >
        <Canvas x:Name="mCanvas" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MouseMove="mCanvas_MouseButton" MouseDown="mCanvas_MouseButton" MouseUp="mCanvas_MouseButton"></Canvas>
    </Grid>
</Window>
